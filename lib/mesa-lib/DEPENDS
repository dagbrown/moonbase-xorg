optional_depends libclc "-D intel-clc=enabled" "-D intel-clc=disabled" "for opencl c programming support,${PROBLEM_COLOR}}say no on first install${DEFAULT_COLOR}"

optional_depends libepoxy "" "" "for OpenGL pointer management support (gtk+-3 needs it)"

