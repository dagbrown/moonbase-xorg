          MODULE=xterm
         VERSION=365
          SOURCE=$MODULE-$VERSION.tgz
      SOURCE_URL=ftp://ftp.invisible-island.net/$MODULE
      SOURCE_VFY=sha256:d627d2b005803b4ebcdf04f2d89e3e1d2878235d2ecdfa73d904bb1772a74f90
