          SOURCE=$MODULE-$VERSION.tgz
      SOURCE_URL=ftp://ftp.invisible-island.net/$MODULE
      SOURCE_VFY=sha256:963c5d840a0f0f4c077ff284586e8b1f83f3f983dca6f74f4b361975b5388c82
